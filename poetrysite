button:hover {
    background-color: #c4925a;
}

const poems = [
    "شعر عن الحب السعودي التقليدي...",
    "شعر آخر...",
    // Add more poems here
];

document.getElementById("generate-poem").addEventListener("click", function() {
    const randomPoem = poems[Math.floor(Math.random() * poems.length)];
    document.getElementById("poetry").innerHTML = `<p>${randomPoem}</p>`;
});